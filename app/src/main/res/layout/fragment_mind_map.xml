<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_green_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back Button and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MINDMAP HỆ THỐNG KIẾN THỨC"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/green_700" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#CBFFE7"
            android:layout_marginBottom="25dp"/>

        <!-- Lesson List -->
        <LinearLayout
            android:id="@+id/lesson_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <LinearLayout android:id="@+id/lesson_item_1"
                style="@style/LessonItemStyle">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_green800_background"
                    android:layout_marginEnd="10dp">
                    <ImageView style="@style/LessonArrowStyle"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hệ thống lý thuyết C1"
                    style="@style/LessonTextStyle" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_lesson_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">
                <ImageView
                    android:id="@+id/img_lesson_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_mindmap_c1"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout android:id="@+id/lesson_item_2"
                style="@style/LessonItemStyle">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_green800_background"
                    android:layout_marginEnd="10dp">
                    <ImageView style="@style/LessonArrowStyle"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hệ thống lý thuyết C2"
                    style="@style/LessonTextStyle" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_lesson_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">
                <ImageView
                    android:id="@+id/img_lesson_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_mindmap_c2"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout android:id="@+id/lesson_item_3"
                style="@style/LessonItemStyle">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_green800_background"
                    android:layout_marginEnd="10dp">
                    <ImageView style="@style/LessonArrowStyle"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hệ thống lý thuyết C3"
                    style="@style/LessonTextStyle" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_lesson_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">
                <ImageView
                    android:id="@+id/img_lesson_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_mindmap_c3"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout android:id="@+id/lesson_item_4"
                style="@style/LessonItemStyle">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_green800_background"
                    android:layout_marginEnd="10dp">
                    <ImageView style="@style/LessonArrowStyle"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hệ thống lý thuyết C4"
                    style="@style/LessonTextStyle" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_lesson_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">
                <ImageView
                    android:id="@+id/img_lesson_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_mindmap_c1"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout android:id="@+id/lesson_item_5"
                style="@style/LessonItemStyle">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_green800_background"
                    android:layout_marginEnd="10dp">
                    <ImageView style="@style/LessonArrowStyle"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hệ thống lý thuyết C5"
                    style="@style/LessonTextStyle" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_lesson_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">
                <ImageView
                    android:id="@+id/img_lesson_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_mindmap_c1"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Comment Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_red_background"
                android:layout_marginEnd="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_mail" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Bình luận..."
                android:textSize="16sp"
                android:textColorHint="@color/black"
                android:textStyle="italic|bold"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:background="@drawable/button_white_background"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
